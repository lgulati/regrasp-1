html
  head
    title=title
    link(href='/css/style.css', rel='stylesheet')
    link(href='/css/circle.css', rel='stylesheet')
    script(src='/socket.io/socket.io.js')
    script(src='/js/task.js')
      script(type='text/javascript')
    body(margin="auto")
      div.tabletLayout
        div#pretask 
          div.centeredPatient
            div#objectSetup
              div.centered
                span#SetupText Select the highlighted object
                object#objectsUsed(data="../img/icons-all/objects.svg" ftype="image/svg+xml")
            div#firstDiagram
              div.centered
                span#firstDiagramText Set up your object(s) and hand
                img#firstSetup(src="../img/icons-all/diagrams-start1.png")
            div#diagram
              div.centered
                div#popupBoxOnePosition
                  div.popupBoxWrapper
                    div.popupBoxContent
                      video(src="../img/INR-Exercise1.mp4" type="video/mp4" controls="controls" autoplay="autoplay")
                      div.centered
                        div#exit 
                          span Press to go back
                span#exerciseTitle Pass me the cup
                span#diag_wrap
                img#diagIMG(src="../img/icons-all/diagrams-ex1.png")
                div
                  span#video Video   
            div#taskArea
              div.centered
                div.image         
                  object#scoreImage(data="../img/icons-all/fullcircle-thirds.svg" ftype="image/svg+xml")  
                  div.scoreArea
                    div#repetitions
                      span#scoreText You have
                      br
                      span#count 3
                      br
                      more to go!
                    div#scoreResponse
                      span#scoreValue Hold on
                      br
                      span#resetObjects Score is loading
          div#start
            div.centered
              div.forward
                img(src="../img/icons-all/forward.png")
        div#task
          div.centeredTask
            div.centered
              p#tasktext Start